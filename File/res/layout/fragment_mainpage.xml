<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <android.support.v4.widget.SwipeRefreshLayout 
        android:layout_below="@id/head"
        android:layout_above="@id/radiogroup"
       	android:id="@+id/swipe_container"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" >
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	    <LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	        >
	<com.view.autoscrollviewpager.AutoScrollViewPager 
	    android:id="@+id/advertisement"
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	></com.view.autoscrollviewpager.AutoScrollViewPager>
	<LinearLayout 
	    android:layout_marginTop="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal"
	    >
	        <ImageView
	            android:id="@+id/meishi" 
	            style="@style/icon_size"
	            android:src="@drawable/icon_fenlei_meishi"
	            />
	        <ImageView 
	            android:id="@+id/dianying" 
	            style="@style/icon_size"
	            android:src="@drawable/icon_fenlei_dianying"
	            />
	        <ImageView 
	            android:id="@+id/yule" 
	            style="@style/icon_size"
	            android:src="@drawable/icon_fenlei_yule"
	            />
	        <ImageView 
	            android:id="@+id/jiudian" 
	            style="@style/icon_size"
	            android:src="@drawable/icon_fenlei_jiudian"
	            />
	    </LinearLayout>
	    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="20dp"
	    android:orientation="horizontal"
	    >
	       <TextView 
	           style="@style/icon_title"
	           android:text="美食"
	           />
	       <TextView 
	           style="@style/icon_title"
	           android:text="电影"
	           />
	       <TextView 
	           style="@style/icon_title"
	           android:text="KTV"
	           />
	       <TextView 
	           style="@style/icon_title"
	           android:text="酒店"
	           />
	    </LinearLayout>
	    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal"
	    >
	        <ImageView
	            android:id="@+id/meirong" 
	            style="@style/icon_size"
	            android:src="@drawable/icon_fenlei_meirong"
	            />
	        <ImageView 
	            android:id="@+id/wanggou" 
	            style="@style/icon_size"
	            android:src="@drawable/icon_fenlei_wanggou"
	            />
	        <ImageView 
	            android:id="@+id/news" 
	            style="@style/icon_size"
	            android:src="@drawable/icon_fenlei_new"
	            />
	        <ImageView 
	            android:id="@+id/all" 
	            style="@style/icon_size"
	            android:src="@drawable/icon_fenlei_all"
	            />
	    </LinearLayout>
	    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="20dp"
	    android:orientation="horizontal"
	    >
	       <TextView 
	           style="@style/icon_title"
	           android:text="美容保健"
	           />
	       <TextView 
	           style="@style/icon_title"
	           android:text="网购"
	           />
	       <TextView 
	           style="@style/icon_title"
	           android:text="今日新单"
	           />
	       <TextView 
	           style="@style/icon_title"
	           android:text="更多分类"
	           />
	    </LinearLayout>
	    
	</LinearLayout>
	<com.view.horizontalscrollview.CenterLockHorizontalScrollview
	    android:layout_marginTop="10dp"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </com.view.horizontalscrollview.CenterLockHorizontalScrollview>
	<ListView
	    android:layout_marginTop="10dp"
	    android:id="@+id/listview"
	   	android:layout_width="fill_parent"
        android:layout_height="10dp"
	    >
	</ListView>
	
	
	</LinearLayout>
	</ScrollView>
	</android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
